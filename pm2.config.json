{
    "apps": [
      {
        "name": "DriverModeSMTPAPI",
        "script": "index.js", 
        "watch": true,
        "ignore_watch": ["node_modules", "logs"],
        "env": {
          "PORT": 5000,
          "NODE_ENV": "development"
        },
        "env_production": {
          "PORT": 5000,
          "NODE_ENV": "production"
        },
        "error_file": "./logs/error.log",
        "out_file": "./logs/output.log",
        "log_date_format": "YYYY-MM-DD HH:mm Z"
      }
    ]
  }
  